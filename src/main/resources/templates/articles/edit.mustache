{{>layouts/header}}

{{#article}}
<form class="container" action="/articles/update" method="post">  <!-- 어디에 어떻게 -->
    <input name="id" type="hidden" value="{{id}}">
<div class="mb-3">
    <label class="form-label">제목</label>
    <input type="text" class="form-control" name="title" value="{{title}}"><!-- 데이터 가져와서 띄워주기-->
</div>
<div class="mb-3">
    <label class="form-label">내용</label>
    <textarea class="form-control" rows="3" name="content">{{content}}</textarea> <!-- 데이터 가져와서 띄워주기-->
</div>
<button type="submit" class="btn btn-primary">Submit</button>
<a href="/articles/{{id}}">Back</a> <!-- 백 누르면 상세페이지로 이동하도록! -->
</form>
{{/article}}

{{>layouts/footer}}
