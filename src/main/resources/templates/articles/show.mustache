{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}}
    </tbody>
</table>
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">Edit</a> <!-- 수정 버튼 생성 코드 -->
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">Delete</a> <!-- 삭제 버튼 생성 코드 -->
<!--
{ {#article} } ~ { {/article} } 의 사용범위 밖이기 때문에 .을 사용해서 article.id로 표시
class="btn btn-primary" -> Edit을 버튼 으로 만들어주기
-->
<a href="/articles">Go to Article List</a>

{{>comments/_comments}} <!-- 상세 페이지에 댓글 뷰 파일 넣기-->
{{>layouts/footer}}
